@model IEnumerable<Department>

<h2>Departments</h2>

<form method="get">
    <input type="text" name="search" placeholder="Search..." value="@ViewData["Search"]" />
    <button type="submit">Search</button>
</form>

<table>
    <thead>
        <tr>
            <th>@Html.ActionLink("Name", "Index", new { sortOrder = "name" })</th>
            <th>@Html.ActionLink("Location", "Index", new { sortOrder = "location" })</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var department in Model)
        {
            <tr>
                <td>@department.Name</td>
                <td>@department.Location</td>
                <td>
                    <a asp-action="Details" asp-route-id="@department.Id">Details</a> |
                    <a asp-action="Edit" asp-route-id="@department.Id">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@department.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
